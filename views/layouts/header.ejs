<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'ChatApp' %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.5/socket.io.min.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container-fluid">
    <div class="chat-container">

        <!-- Sidebar / Slider -->
        <aside class="sidebar" id="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="m-0 fw-bold text-primary">Chats</h4>
                    <div class="d-flex align-items-center gap-3">
                        <!-- Theme Toggle -->
                        <div id="themeToggle" title="Toggle Theme">
                            <a onclick="toggleTheme()">
                                <i class="bi bi-moon-stars fs-5 text-muted" id="themeIcon"></i>
                            </a>
                        </div>
                        
                        <div class="dropdown">
                            <i class="bi bi-three-dots-vertical fs-5 text-muted" role="button" data-bs-toggle="dropdown"></i>
                            <ul class="dropdown-menu dropdown-menu-end">
                              
                                <li><a class="dropdown-item text-danger" href="/logout">Log out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>  
            </div>

            <!-- Chat List -->
            <div class="chat-list">
            <% if(users && users.length > 0){
                users.forEach((user)=>{
            %>    
            <div class="chat-item" onclick="openChat('<%= user._id %>')" id="userActive-<%= user._id %>" data-id="<%= user._id %>">
                    <div class="avatar-wrapper">
                        <img src="/images/uploads/<%= user.avatar %>" class="chat-avatar" alt="">
                        <div class="status-dot <%= user.is_online == true ? '' : 'offline' %>" id="status-<%= user._id %>"></div>
                    </div>
                    <div class="chat-info">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="chat-name"><%= user.fullName %></div>
                            <div class="chat-meta">
                                <span><%= new Date(user.updatedAt).toLocaleTimeString('en-US',{hour:'numeric',minute:'2-digit',hour12:true}) %></span>
                                <!-- <span class="unread-badge" style="display: block;">unread</span> -->
                            </div>
                        </div>
                        <div class="chat-preview" id="last-message"><%= user.lastMessage ? user.lastMessage.message : 'Select to chat' %></div>
                    </div>
            </div>
            <%  }) } %>
            </div>
        </aside>
